<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.NewsDetailActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/menuLayoutDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/ic_arrow_back_white_24dp" />

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/ic_menu_white_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNewsDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="List News Detail Title"
                    android:textSize="25dp"
                    android:background="@color/backGroundTitleActivity"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageNewsDetail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/album1"/>

                    <TextView
                        android:id="@+id/txtDateOfNews"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textSize="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="7dp"
                        android:textStyle="italic"
                        android:textColor="@color/white"
                        android:gravity="end"
                        android:text="25/06/2019"/>

                    <TextView
                        android:id="@+id/txtNewsDetailContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:text="Content news detail"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/menuNewsDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/menu_header"
            app:menu="@menu/menu_item" />

    </androidx.drawerlayout.widget.DrawerLayout>


</LinearLayout>