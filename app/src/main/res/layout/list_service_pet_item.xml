<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="7dp"
    app:layout_widthPercent="100%"
    app:layout_heightPercent="30%">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="7dp"
        cardview:cardElevation="20dp"
        cardview:cardCornerRadius="20dp"
        app:layout_heightPercent="20%">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageServicePet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/album1"
                android:layout_gravity="center"
                app:layout_widthPercent="35%"
                app:layout_heightPercent="100%"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                app:layout_widthPercent="60%">

                    <TextView
                        android:id="@+id/txtServicePetTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Service Pet Title"
                        android:textSize="18dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        app:layout_widthPercent="65%"
                        app:layout_heightPercent="30%"
                        />



                    <TextView
                        android:id="@+id/txtServicePetPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_alignParentRight="true"
                        android:text="$1400"
                        app:layout_widthPercent="35%"/>


                <TextView
                    android:id="@+id/txtServicePetContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_below="@+id/txtServicePetTitle"
                    android:text="Service Pet Content"/>
            </RelativeLayout>


        </androidx.percentlayout.widget.PercentRelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.percentlayout.widget.PercentRelativeLayout>