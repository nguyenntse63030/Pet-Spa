<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadingbackgound"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/petlogo"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="50%"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="28%"
        />

    <TextView
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Pet Spa"
        android:textSize="150px"
        android:textColor="#fff"
        app:layout_marginTopPercent="40%"
        app:layout_marginLeftPercent="33%"
        android:fontFamily="@font/cac_champagne"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="40%">
        <ProgressBar
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </RelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>