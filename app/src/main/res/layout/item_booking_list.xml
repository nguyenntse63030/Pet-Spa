<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="7dp"
        cardview:cardCornerRadius="20dp">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imageServiceBooking"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/pet4"
                android:scaleType="centerCrop"
                app:layout_widthPercent="35%"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                app:layout_widthPercent="62%">

                <TextView
                    android:id="@+id/txtBookingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Booking Title"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtBookingDesciption"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/txtBookingTitle"
                    android:textSize="15dp"
                    android:text="Booking Content"/>

                <TextView
                    android:id="@+id/txtDateOfBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="25/06/2019"
                    android:textSize="14dp"
                    android:layout_below="@id/txtBookingDesciption"
                    android:layout_marginEnd="7dp"
                    android:textStyle="italic"/>

            </RelativeLayout>

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>