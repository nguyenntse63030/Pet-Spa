    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnKhuyenMai"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="75dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/sale_white"
                android:background="@drawable/border_radius_button"/>

            <Button
                android:id="@+id/btnVeSinh"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@id/btnKhuyenMai"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/hair_brush_white"
                android:paddingEnd="10dp"
                android:background="@drawable/border_radius_button"/>
            <Button
                android:id="@+id/btnSpa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:drawableStart="@drawable/flower_white"
                android:textColor="@color/white"
                android:paddingEnd="10dp"
                android:background="@drawable/border_radius_button"
                android:layout_toRightOf="@id/btnVeSinh"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="20dp"
                android:textSize="16dp"
                android:text="Khuyến mãi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:textSize="16dp"
                android:text="Vệ sinh"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginStart="25dp"
                android:text="Spa"/>
        </LinearLayout>

    </LinearLayout>

