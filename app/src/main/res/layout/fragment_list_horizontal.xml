    <TextView
        android:id="@+id/txtNearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutButton"
        android:text="Gần bạn nhất"
        android:textSize="24dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtNearby"
        android:background="@color/blue"
        app:layout_widthPercent="90%"/>
    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNearby">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerListServiceNearby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/txtMostUsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalView"
        android:text="Sử dụng nhiều nhất"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:textColor="@color/blue"
        android:textStyle="bold"

        android:layout_marginStart="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtMostUsed"
        android:background="@color/blue"
        app:layout_widthPercent="90%"/>
    <HorizontalScrollView
        android:id="@+id/horizontalViewMostUsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMostUsed">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerListServiceMostUsed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>
    </HorizontalScrollView>




</androidx.percentlayout.widget.PercentRelativeLayout>